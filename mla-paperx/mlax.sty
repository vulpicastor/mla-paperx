%
%   MLA environment
%
\newenvironment{mla}[5]
{
    \newcommand{\firstname}{#1}
    \newcommand{\lastname}{#2}
    \newcommand{\classname}{#3}
    \newcommand{\mladate}{#4}
    \newcommand{\mlatitle}{#5}
    \fancyhead[R]{\lastname\ \thepage}
%    \fancyfoot{}
    \thispagestyle{plain}
    \flushleft
%    \linespread{1}
    \begin{singlespace}
        \firstname \ \lastname \\
        \classname \\
        \mladate
        \vspace{\baselineskip}
%    \end{singlespace}
%    \linespread{2}
    
        \centering 
        \mlatitle
    \end{singlespace}
%    \frenchspacing
    
    \raggedright
    \setlength{\parindent}{0.5in}
}
{\newpage}

