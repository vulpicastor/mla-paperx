%   MLA environment
\newenvironment{mla}[5]
{
    \newcommand{\firstname}{#1}
    \newcommand{\lastname}{#2}
    \newcommand{\classname}{#3}
    \newcommand{\mladate}{#4}
    \newcommand{\mlatitle}{#5}
    \fancyhead[R]{\lastname\ \thepage}
%    \fancyfoot{}
    \thispagestyle{plain}
    \flushleft
    \setlength{\parindent}{0.5in}
}
{\newpage}

\newcommand{\makeauthor}
{
    \setlength{\parindent}{\z@}
    \begin{singlespace}
        \firstname \ \lastname \\
        \classname \\
        \mladate
    \end{singlespace}
    \setlength{\parindent}{0.5in}
}

\renewcommand{\maketitle}
{
    \setlength{\parindent}{\z@}
    \begin{singlespace}
        \centering 
        \mlatitle
    \end{singlespace}
    \setlength{\parindent}{0.5in}
}

%   Single-spaced quote environment
\renewenvironment{verse}
{
    \let\\\@centercr
    \begin{singlespace*}
    \list{}
    {
        \itemsep            \z@
        \itemindent         -0.5in %-1.5em%
        \listparindent      \itemindent
        \leftmargin         0.5in %
        \rightmargin        \leftmargin
        \advance\leftmargin \leftmargin
    }
    \item\relax
}
{\endlist \end{singlespace*}}

\renewenvironment{quote}
{
    \begin{singlespace*}
        \list{}
        {%
            \leftmargin    0.5in
            \rightmargin   \leftmargin
            \itemsep       \z@
            \parsep        \z@
        }
        \item \relax
    }
    {\endlist \end{singlespace*}}

\renewenvironment{quotation}
{
    \begin{singlespace*}
    \list{}
    {%
        \leftmargin    0.5in
        \rightmargin   0.5in
        \listparindent 0.5in
        \itemindent    \listparindent
        \parsep        \z@
    }
    \item \relax
}
{\endlist \end{singlespace*}}


